<MudListItem Icon="@Icon" OnClick="OnClickItem" Disabled="Disabled">
    <MudText Typo="Typo.h6" Style="font-weight: normal;">
        @ChildContent
    </MudText>
</MudListItem>

@code {
    [Parameter] public string? Icon { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Disabled { get; set; }

    [CascadingParameter] private BottomMenu Menu { get; set; } = null!;

    private async Task OnClickItem(MouseEventArgs e)
    {
        Menu.SetDrawerOpened(false);
        await OnClick.InvokeAsync(e);
    }
}
