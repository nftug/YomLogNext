@inherits BindableComponentBase
@inject ExceptionHubService ExceptionHub

@code {
    protected override void OnInitialized()
    {
        ExceptionHub.Exception
            .Where(v => v != null)
            .Subscribe(v =>
                InvokeAsync(() =>
                {
                    ExceptionHub.Exception.Value = null;
                    throw v!;
                })
            )
            .AddTo(Disposable);
    }
}