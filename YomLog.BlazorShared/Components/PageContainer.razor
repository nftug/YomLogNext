@inherits BindableComponentBase

<PageTitle>@Title - @AppSettings.AppName</PageTitle>

@if (TopPage && AppSettings.IsNativeApp)
{
    <NavigationLock OnBeforeInternalNavigation="OnBeforeNavigationOnTopPage" />
}

<div class="@OuterContainerClass">
    <MudContainer Class="@(CenteredContainer ? "inner-centered-container" : null)" MaxWidth="@ContainerMaxWidth">
        @if (SetHeader)
        {
            <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                <MudText Typo="Typo.h4" GutterBottom>@Title</MudText>
            </MudHidden>
        }

        @if (MainContent != null)
        {
            @MainContent
        }
        else
        {
            @ChildContent
        }
    </MudContainer>
</div>